# Application Settings
APP_NAME="Policy RAG Agent"
APP_VERSION="0.2.0"
ENVIRONMENT="development"
LOG_LEVEL="INFO"

# API Configuration
API_HOST="0.0.0.0"
API_PORT=8000
API_WORKERS=4
API_TIMEOUT_SECONDS=30

# LLM Configuration
LLM_PROVIDER="mock"  # Options: mock, openai, anthropic, azure
LLM_MODEL="gpt-4"
LLM_API_KEY=""
LLM_MAX_TOKENS=1000
LLM_TEMPERATURE=0.1

# RAG Configuration
RAG_TOP_K=4
RAG_MIN_CONFIDENCE=0.25
RAG_CITATION_FORMAT="[{id}]"

# Cache Configuration
CACHE_ENABLED=true
CACHE_TTL_SECONDS=300
CACHE_MAX_SIZE=1000

# Security
CORS_ORIGINS="*"
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60

# Monitoring
ENABLE_METRICS=true
ENABLE_TRACING=false
SENTRY_DSN=""
